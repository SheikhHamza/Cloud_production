<div class="row">
  <div class="col-lg-6 col-xs-6 col-sm-6 col-md-6 text-center 
  col-lg-offset-3 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 text-center">
  <div class="form-group form-signin">
    <%= form_with(model: profile, local: true) do |form| %>
    <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, id: :profile_username,class: 'form-control' %>
    </div>
    <div class="field">
      <%= form.label :bio %>
      <%= form.text_area :bio, id: :profile_bio ,class: 'form-control'%>
    </div>

    <div class="field">
      <%= form.label :avatar %>
      <%= form.file_field :avatar %>
    </div>
    <div class="actions">
      <%= form.submit "Create",class:'btn btn-primary'%>
    </div>
    <% end %>
  </div>
</div>
</div>

